<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".MainActivity">

    <include layout="@layout/top_bar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="740dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.42000002">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:orientation="horizontal"
            android:paddingStart="23dp"
            android:paddingTop="20dp">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/akt_kap"
                style="@android:style/Widget.Button"
                android:layout_width="175dp"
                android:layout_height="50dp"
                android:background="@drawable/tab_button1"
                android:drawableLeft="@drawable/ic_book_open"
                android:fontFamily="@font/patrickhand_regular"
                android:paddingStart="10dp"
                android:text="Aktuelles Kapitel"
                android:textColor="@color/gray5"
                android:textSize="20sp" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/all_kap"
                style="@android:style/Widget.Button"
                android:layout_width="145dp"
                android:layout_height="50dp"
                android:layout_marginStart="10dp"
                android:background="@drawable/tab_button"
                android:drawableLeft="@drawable/ic_book_open1"
                android:fontFamily="@font/patrickhand_regular"
                android:paddingStart="10dp"
                android:text="Alle Kapitel"
                android:textColor="@color/black"
                android:textSize="20sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="368dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="23dp"
            android:orientation="vertical">


            <!-- Верхній текст -->
            <TextView
                android:id="@+id/buche"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/patrickhand_regular"
                android:text="Begegnungen A1+"
                android:textColor="@color/black"
                android:textSize="36sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/kapitel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:fontFamily="@font/patrickhand_regular"
                    android:text="Kapitel 6/8"
                    android:textColor="@color/black"
                    android:textSize="24sp" />

                <ProgressBar
                    android:id="@+id/progress_bar"
                    style="@android:style/Widget.ProgressBar.Horizontal"
                    android:layout_width="180dp"
                    android:layout_height="8dp"
                    android:layout_gravity="center"
                    android:layout_marginStart="100dp"
                    android:max="100"
                    android:progress="75"
                    android:progressDrawable="@drawable/custom_progress" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_marginTop="8dp"
                android:background="@color/black" />

        </LinearLayout>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="16dp">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <LinearLayout
                        style="@style/ChapterCard"
                        android:background="@drawable/rounded_button1"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_users"
                            android:layout_marginStart="16dp"/>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="44dp">

                            <TextView
                                android:id="@+id/textView2"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kapitel 1"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="26sp"
                                android:textColor="@color/gray5"/>

                            <TextView
                                android:id="@+id/textView"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Guten Tag"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="22sp"
                                android:textColor="@color/gray5"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ChapterCard"
                        android:background="@drawable/rounded_button1"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_bag"
                            android:layout_marginStart="16dp"/>

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="36dp">

                            <TextView
                                android:id="@+id/textView3"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kapitel 2"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="26sp"
                                android:textColor="@color/gray5"/>

                            <TextView
                                android:id="@+id/textView4"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Erste Kontake am Arbeitsplatz "
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="20sp"
                                android:textColor="@color/gray5"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ChapterCard"
                        android:background="@drawable/rounded_button1"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_car"
                            android:layout_marginStart="16dp"/>

                        <LinearLayout
                            android:layout_width="160dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="36dp">

                            <TextView
                                android:id="@+id/textView5"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kapitel 3"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="26sp"
                                android:textColor="@color/gray5"/>

                            <TextView
                                android:id="@+id/textView6"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Unterwegs in München"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="20sp"
                                android:textColor="@color/gray5"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ChapterCard"
                        android:background="@drawable/rounded_button1"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_utensils"
                            android:layout_marginStart="16dp"/>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="44dp">

                            <TextView
                                android:id="@+id/textView7"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kapitel 4"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="26sp"
                                android:textColor="@color/gray5"/>

                            <TextView
                                android:id="@+id/textView8"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Essen und Trinken"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="20sp"
                                android:textColor="@color/gray5"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ChapterCard"
                        android:background="@drawable/rounded_button1"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_calender"
                            android:layout_marginStart="16dp"/>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="44dp">

                            <TextView
                                android:id="@+id/textView9"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kapitel 5"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="26sp"
                                android:textColor="@color/gray5"/>

                            <TextView
                                android:id="@+id/textView10"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Alltag"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="22sp"
                                android:textColor="@color/gray5"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ChapterCard"
                        android:background="@drawable/rounded_button1"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_map"
                            android:layout_marginStart="16dp"/>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="44dp">

                            <TextView
                                android:id="@+id/textView11"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kapitel 6"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="26sp"
                                android:textColor="@color/gray5"/>

                            <TextView
                                android:id="@+id/textView12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Reisen"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="22sp"
                                android:textColor="@color/gray5"/>
                        </LinearLayout>

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_check"
                            android:layout_marginEnd="16dp"/>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ChapterCard"
                        android:background="@drawable/rounded_button"
                        android:layout_marginBottom="15dp">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_home1"
                            android:layout_marginStart="16dp"/>

                        <LinearLayout
                            android:layout_width="150dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:padding="8dp"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="44dp">

                            <TextView
                                android:id="@+id/textView01"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kapitel 7"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="26sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/textView02"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Wohnen"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="22sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>

                    <LinearLayout
                        style="@style/ChapterCard"
                        android:background="@drawable/rounded_button">

                        <ImageView
                            android:layout_width="48dp"
                            android:layout_height="48dp"
                            android:src="@drawable/ic_meeting"
                            android:layout_marginStart="16dp"/>

                        <LinearLayout
                            android:layout_width="170dp"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_marginStart="24dp"
                            android:layout_marginEnd="44dp">

                            <TextView
                                android:id="@+id/textView0"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Kapitel 8"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="24sp"
                                android:textColor="@color/black"/>

                            <TextView
                                android:id="@+id/textView1"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Begegnungen und Ereignisse"
                                android:fontFamily="@font/patrickhand_regular"
                                android:textSize="20sp"
                                android:textColor="@color/black"/>
                        </LinearLayout>
                    </LinearLayout>

                </LinearLayout>
            </ScrollView>

        </androidx.constraintlayout.widget.ConstraintLayout>


    </LinearLayout>

    <include layout="@layout/bottom_bar"/>

</androidx.constraintlayout.widget.ConstraintLayout>