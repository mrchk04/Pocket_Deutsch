<!--            android:text="Bereits registriert? Anmelden"-->
<!--            android:textColor="@color/gray5"-->
<!--            android:textSize="16sp"-->
<!--            android:padding="8dp" />-->

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>